<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <meta name="author" content="Ladislav Vondráček">
  <meta n:ifset="$description" name="description" content="{$description}">
  <meta n:ifset="$keywords" name="keywords" content="{$keywords}">

  <title>{ifset #title}{include title|striptags} | {/ifset}{_$title}</title>

  {control cssScreen}
  <link rel="shortcut icon" href="{$basePath}/favicon.ico">
  {block head}{/block}
</head>

<body>
  <div class="container-fluid">
    <nav class="navbar navbar-default" role="navigation">
      <div class="container-fluid">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" n:href=":Front:Home:default">{_$title}</a>
        </div>
        {control menu}
      </div>
    </nav>

    <div n:foreach="$flashes as $flash" class="alert alert-{$flash->type}" role="{$flash->type}">{_$flash->message}</div>

    {include content}

  </div>
  {control js}
  {block scripts}{/block}
</body>
</html>
