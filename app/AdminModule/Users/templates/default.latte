{block #content}
<h1 n:block="title">{_admin.users.heading}</h1>

<table class="table table-striped table-condensed">
  <thead>
    <tr>
      <th>#</th>
      <th>{_admin.users.email}</th>
      <th>{_admin.users.role}</th>
    </tr>
  </thead>
  <tbody>
    <tr n:foreach="$users as $item">
      <th>{$item->id}</th>
      <th>{$item->email}</th>
      <th>{$item->role}</th>
    </tr>
  </tbody>
</table>