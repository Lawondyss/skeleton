{block #content}
<h1 n:block="title">{_'Uživatelé'}</h1>

<table class="table table-striped table-condensed">
  <thead>
    <tr>
      <th>#</th>
      <th>{_'E-mail'}</th>
      <th>{_'Role'}</th>
    </tr>
  </thead>
  <tbody>
    <tr n:foreach="$users as $item">
      <th>{$item->id}</th>
      <th>{$item->email}</th>
      <th>{$item->role}</th>
    </tr>
  </tbody>
</table>